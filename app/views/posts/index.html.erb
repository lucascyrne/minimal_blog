<!-- app/views/posts/index.html.erb -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @posts.each do |post| %>
    <%= link_to post_path(post), class: "border rounded p-4 shadow cursor-pointer block" do %>
      <% if post.image.attached? %>
        <%= image_tag post.image, class: "w-full h-48 object-cover" %>
      <% end %>
      <h2 class="text-lg font-bold mt-2"><%= post.title %></h2>
      <p><%= truncate(post.content, length: 100) %></p>
    <% end %>
  <% end %>
</div>

<!-- app/views/posts/new.html.erb e edit.html.erb -->
<h1 class="text-center my-4"><%= action_name == 'new' ? 'Novo Post' : 'Editar Post' %></h1>

<%= form_with(model: @post, local: true, html: { class: "max-w-4xl mx-auto px-4" }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Oops!</strong>
      <span class="block sm:inline"><%= pluralize(@post.errors.count, "error") %> impediram que este post fosse salvo:</span>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :image, "Imagem", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :title, "Título", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :content, "Conteúdo", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :content, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", rows: 10 %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Salvar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursosr-pointer" %>
    <%= link_to 'Voltar', posts_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
  </div>
<% end %>
